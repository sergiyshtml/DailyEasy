@model IEnumerable<DailyEasy.Models.Legging>
@using System.Linq

<div class="row">
    <div class="col-md-2">
        <h2>Легінси</h2>
        <nav>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    З push-up ефектом
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck2">
                <label class="form-check-label" for="defaultCheck2">
                    Гладенькі
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck3">
                <label class="form-check-label" for="defaultCheck3">
                    В рубчик
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck4">
                <label class="form-check-label" for="defaultCheck4">
                    Вкорочені
                </label>
            </div>
        </nav>
    </div>


    <div class="col-md-10">
        <div class="row">
            @foreach (var legging in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card">
                        @if (legging.Photos.Any())
                        {
                            <img src="@legging.Photos.First().Url" class="card-img-top" alt="@legging.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@legging.Name</h5>
                            <p class="card-text">Ціна: @legging.Price грн</p>
                            <a class="btn btn-primary" asp-area="" asp-controller="TowarCard" asp-action="LeggingsTowar" asp-route-id="@legging.Id">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-area="" asp-controller="TowarCard" asp-action="ImputTowar">Upload Legging</a>
</div>
